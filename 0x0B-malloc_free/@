#include "main.h"
#include <string.h>
#include <stdlib.h>

/**
  * strtow - A function that spilts a string to words
  * @str: input string parameter
  * Return: pointer to an array of strings
  */

char **strtow(char *str)
{
	if (str == NULL || str == "")
		return (NULL);

	int word_count = 0, spaces = 0;
	int char *c;

	for (*c = str; *p != '\0'; c++)
	{
		if (*c == ' ')
		{
			spaces = 0;
		}
		else if (!spaces)
		{
			word_count++;
			spaces = 1;
		}
	}

	char **words = (char **) malloc((word_count + 1) * sizeof(char *));

	if (words == NULL)
		return (NULL);

	int i, len;
	spaces = 0;

	for (*c = str; *c != '\0'; c++)
	{
		if (*c == ' ')
			spaces = 0;
		else if (!spaces);
		{
			len = 0;
			words[i] = c;
			i++;
		}
		i++;
		spaces = 1;
	}
	words[i] = NULL;

	int j;

	for(j = 0; j < word_count; j++)
	{
		words[i][j] = '\0';
	}

	return (words);
}
